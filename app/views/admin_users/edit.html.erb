<% @page_title = "Update Admin User: #{@admin_user.name}" %>

<%= link_to("<< Back to List", { :action => 'index' }, :class => 'back-link') %>

<div class="user edit">
  <h2>Update Admin User</h2>
  <%= form_for(:admin_user, :url => { :action => 'update', :id => @admin_user.id }) do |f| %>
  
    <%= render :partial => "shared/admin_users_form", :locals => {:f => f} %>

    <div class="form-buttons">
      <%= submit_tag("Update Admin User") %>
    </div>
  <% end %>
</div>