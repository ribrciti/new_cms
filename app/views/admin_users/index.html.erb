<% @page_title = "Admin Users" %>

<%= link_to( "Back to Menu", { :controller => 'access', :action => 'index' }, :class => 'back-link') %>

<div class="user index">
  <h2>Admin Users</h2>

  <%= link_to image_tag('ror_logo.jpg', :size => '11x11', :alt => "+") + " Add New Admin User", { :action => 'new' }, :class => 'action new' %>
  <div><%= pluralize @admin_users.size, 'admin user' %> found</div>
  <table class="listing" summary="AdminUser list">
    <tr class="header">
      <th>Admin Name</th>
      <th>Email</th>
      <th>Username</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |admin_user| %>
    <tr class="<%= cycle 'odd', 'even' %>">
      <td><%= admin_user.name %></td>
      <td class="center"><%= admin_user.email %></td>
      <td class="center"><%= admin_user.username %></td>
      <td class="actions">
        <%= link_to("Edit", {:action => 'edit', :id => admin_user.id }, :class => 'action edit') %>
        <%= link_to("Delete", { :action => 'delete', :id => admin_user.id }, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>