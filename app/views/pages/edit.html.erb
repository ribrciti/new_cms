<% @page_title = "Update Page" %>      
<div class="page edit">

  <h2>Create Page</h2>

  <%= form_for(:page, :url => { :action => 'update', 
  		:id => @page.id}) do |f| %>

  	<%= render( :partial => "shared/pages_form", :locals => {:f => f }) %>

    <div class="form-buttons">
      <%= submit_tag("Update Page") %>
    </div>
  <% end %>
</div>